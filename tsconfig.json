{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",

    "types": [
      "node",
      "vitest/globals"
    ],

    "baseUrl": ".",

    "paths": {
      "@/*": ["./*"],
    },

    "noUnusedLocals": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["./**/*.ts", "./**/*.test.ts"]
}